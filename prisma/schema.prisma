// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id              Int             @id @default(autoincrement())
  email           String          @unique
  password        String
  name            String
  favouriteMovies FavoriteMovie[]
}

model FavoriteMovie {
  id            Int      @id @default(autoincrement())
  movieId       Int
  backdrop_path String
  title         String
  overview      String
  poster_path   String
  genres        String[]
  release_date  String
  vote_average  Int
  runtime       Int
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  videos        Video[]
}

model Video {
  id             Int           @id @default(autoincrement())
  key            String
  type           String
  movieId        Int
  favouriteMovie FavoriteMovie @relation(fields: [movieId], references: [id])
}
